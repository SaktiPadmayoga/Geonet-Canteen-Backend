{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
